{{!
    @template block_learnerscript/tabs

    Display the graph reports list in a report page.

    Example context (json):
    {
    }
}}
<ul>
<li class="ls-plotgraphs_listitem" data-cid="{{chartid}}">
    {{#reportid}}
    <a href="javascript:void(0);" class="ls-plotgraph_link cpointer" id="{{chartid}}" data-reportid = "{{reportid}}" data-reporttype = "{{chartid}}">
        <span class="ls-plotgraphs-chartname">
            <span class='ls {{pluginname}}'></span><span id="lschartname{{chartid}}">{{chartname}}</span></span>
    </a>
    {{# issiteadmin}}
        <span class="ls-plotgraphs-chart_options d-flex">
            <img src="{{editicon}}" title={{# str}} edit, block_learnerscript {{/ str}} class="ls-plotreport_editicon cpointer" data-reportid = "{{reportid}}"
            data-action = "plotforms" data-component = "plot" data-title = "{{title}}" data-pname = "{{pluginname}}" data-cid = "{{chartid}}" data-type = "edit"/>
            <img src="{{deleteicon}}" title="{{# str}} delete, block_learnerscript {{/ str}}"
             class="ls-plotreport_deleteicon delete_plot cpointer"
             data-reportid="{{reportid}}"
             data-pname="{{pluginname}}"
             data-cid="{{chartid}}"
             data-delete = 1
             data-comp = "plot"
             data-graphaction = "deletecomponenet"
             data-action="{{config.wwwroot}}/blocks/learnerscript/viewreport.php?id={{reportid}}&pname={{pluginname}}&comp=plot&cid={{chartid}}" />
        </span>
    {{/ issiteadmin}}
    {{/reportid}}
</li>
</ul>
