{{!
    @template block_reportdashboard/courseprofile/courseprofile

    Display the course information for different roles.

    Example context (json):
    {
    }
}}
<div id="profile-page" class="course-profile">
	<div class="row m-0">
		<div class="col-md-6">
			{{^studentrole}}
			{{#coursedata }}
				<span class="coursefilter">
					<label>{{#str}} course, block_reportdashboard {{/str}}</label>
					<select name="filter_courses" class = "dashboardcourses" id = "dashboardcourses" data-select2-ajax="1" data-action = "filtercourses" data-role="{{dashboardrole}}">
						{{# courselist }}
							<option value = "{{id}}" {{selectedcourse}}>{{fullname}}</option>
						{{/ courselist }}
					</select>
				</span>
			{{/coursedata }}
			{{/studentrole}}
		</div>
		<div class="col-md-6">
			{{#issiteadmin}}
				<div style="float:right;">
				<a class="btn linkbtn btn-primary" href="{{config.wwwroot}}/blocks/reportdashboard/dashboard.php">{{#str}} dashboard, block_reportdashboard {{/str}}</a>
				</div>
			{{/issiteadmin}}
			{{^issiteadmin}}
				<div style="float:right;">
				<a class="btn linkbtn btn-primary" href="{{config.wwwroot}}/blocks/reportdashboard/dashboard.php?role={{role}}&contextlevel={{contextlevel}}">{{#str}} dashboard, block_reportdashboard {{/str}}</a>
				</div>
			{{/issiteadmin}}
		</div>
	</div>
	<div class="row m-0">
		<div class="col-md-3">
			{{> block_reportdashboard/courseprofile/coursedetails }}
			{{> block_reportdashboard/courseprofile/badges }}
		</div>
		<div class="col-md-9">
			{{> block_reportdashboard/profilepage/progressinfo }}

			<div class="row mt-5">
				<div class="col-md-6">
					{{> block_reportdashboard/courseprofile/activityprogress }}
				</div>
				<div class="col-md-6">
					{{> block_reportdashboard/courseprofile/timeline }}
				</div>
			</div>
			<div class="mt-5">
				{{> block_reportdashboard/courseprofile/totallearners }}
			</div>

			<div class="mt-5">
				{{> block_reportdashboard/courseprofile/activities }}
			</div>
		</div>
	</div>
</div>
