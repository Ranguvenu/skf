{{!
    @template block_reportdashboard/courseprofile/activities

    Display the activities information of the perticular course.

    Example context (json):
    {
    }
}}
<h5 class="mb-3 pl-2">{{#str}} nactivities, block_reportdashboard {{/str}}</h5>
<div class="activities_card card ls-card">
	<div class="p-2">
		<div class = "reportdashboard_header">
            {{#activitiesreportinstance}}
			<div id="reportcontainer{{activitiesreportinstance}}" class="report_dashboard_container" data-reportid="{{activitiesreportid}}"
            data-reporttype="{{activitiesreporttype}}" data-blockinstance="{{activitiesreportid}}" >
</div>
{{/activitiesreportinstance}}
		</div>
	</div>
</div>
{{#js}}
    require(['block_learnerscript/report'], function(s) {
		var params = {};
        params.reportid = {{activitiesreportid}};
		params.reporttype = '{{activitiesreporttype}}';
		params.instanceid = {{activitiesreportid}};
		params.reportdashboard = true;
        params.filters = {filter_courses:{{courseid}}};
        s.CourseprofileReportsdata(params);
    });
{{/js}}
