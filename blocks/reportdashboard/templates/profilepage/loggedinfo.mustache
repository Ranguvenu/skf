{{!
    @template block_reportdashboard/profilepage/loggedinfo

    Review the in-active courses in last 10 days.

    Example context (json):
    {
    }
}}
<h5 class="mb-3 pl-2">{{# str}} notloggedcourses, block_reportdashboard{{/ str}}</h5>
<div class="logs_card card ls-card">
	<ul class="logs_list m-0 p-0">
		{{#recentaccesscourses}}
		<li class="logs_item row m-0 p-3">
			<div class="col-md-6 p-0">
				<div class="d-flex">
					<div class="course_img rounded mr-2" style='background-image: url("{{{courseimage}}}");'></div>
					<div class="d-flex flex-column justify-content-around">
						<div class="time">{{timeaccessday}}{{timeaccesstime}}</div>
						<h6 class="m-0"><a href='{{config.wwwroot}}/course/view.php?id={{courseid}}' target="_blank">{{course}}</a></h6>
					</div>
				</div>
			</div>
			<div class="col-md-6 p-0 d-flex flex-column align-items-end">
				<div class="text-right pr-2 small mt-2">{{courseprogress}}%</div>
				<div class="progress">
				  <div class="progress-bar" style="width:{{courseprogress}}%"></div>
				</div>
			</div>
		</li>
		{{/recentaccesscourses}}
		{{^recentaccesscourses}}
		<li class="logs_item row m-0 p-3">
			<div class="col-md-6 p-0 p-2">
				<span class="alert alert-info">{{#str}} nodataavailable, block_learnerscript {{/str}}</span>
			</div>
		</li>
		{{/recentaccesscourses}}
	</ul>
</div>
