{{!
    @template block_reportdashboard/profilepage/recentactivities

    Review the information of the recent activities.

    Example context (json):
    {
    }
}}
<h5 class="mb-3 pl-2">{{# str}} recentactivities, block_reportdashboard{{/ str}}</h5>
<div class="recentactivities_card card ls-card">
	<ul class="activities_list m-0 p-2">
		{{# recentactivities }}
		<li class="activities_item d-flex px-2 py-3">
			<div class="activities_img rounded-circle mr-2" style="background-image: url('{{config.wwwroot}}/mod/{{module}}/pix/monologo.svg');"></div>
			<div class="activities_content">
				<div class="activities_info"><a href='{{config.wwwroot}}/mod/{{module}}/view.php?id={{activityid}}' target="_blank">{{activityname}}</a></div>
				<div class="time">{{timeccessday}}{{timeccesstime}}</div>
			</div>
		</li>
		{{/ recentactivities }}
		{{^recentactivities}}
		<li class="activities_item d-flex px-2 py-3">
			<div class="activities_content">
				<span class="alert alert-info">{{#str}} nodataavailable, block_learnerscript {{/str}}</span>
			</div>
		</li>
		{{/recentactivities}}
	</ul>
</div>
