{{!
    @template block_reportdashboard/profilepage/profiledetails

    Review the user information.

    Example context (json):
    {
    }
}}
<div class="card ls-card profiledetails">
	<div class="profileinfo text-center p-3">
		{{^userstatus}}
			<div class="user_status d-flex justify-content-end align-items-center"><span class="activenow"></span>{{# str}} active, block_reportdashboard{{/ str}}</div>
		{{/userstatus}}
		{{#userstatus}}
			<div class="user_status d-flex justify-content-end align-items-center"><span class="inactivenow"></span>{{# str}} inactive, block_reportdashboard{{/ str}}</div>
		{{/userstatus}}
		{{#profileimage}}
		<div class="profileimg rounded-circle m-auto" style='background-image: url("{{{profileimage}}}");'>
		</div>
		{{/profileimage}}
		<div class="username mt-3 d-flex justify-content-center align-item-center">
			{{#userfullname}}
			<h4 class="font-weight-light">{{userfullname}}</h4>
			{{/userfullname}}
			{{#pix}}courseprofile/chat, block_reportdashboard, {{#str}}chat, block_reportdashboard{{/str}}{{/pix}}
		</div>
	</div>
	<ul class="card-content-details px-3">
		<li class="my-2">{{#pix}}courseprofile/email, block_reportdashboard, {{#str}}email, block_reportdashboard{{/str}}{{/pix}}{{email}}</li>
		<li class="my-2">{{#pix}}courseprofile/phone, block_reportdashboard, {{#str}}phone, block_reportdashboard{{/str}}{{/pix}}{{phone1}}</li>
		<li class="my-2">{{#pix}}courseprofile/location, block_reportdashboard, {{#str}}location, block_reportdashboard{{/str}}{{/pix}}{{address}}</li>
	</ul>
	<ul class="accessedtime_details">
		<li>
			<div class="label text-muted">{{# str}} lastaccessedon, block_reportdashboard{{/ str}}</div>
			<div class="time_info d-flex align-items-center"><span class="d-flex align-items-center">{{#pix}}courseprofile/lastaccessedondate, block_reportdashboard, {{#str}}date, block_reportdashboard{{/str}}{{/pix}}{{lastlogin}}</span></div>
		</li>
		<li>
			<div class="label text-muted">{{# str}} totaltimespent, block_reportdashboard{{/ str}}</div>
			<div class="time_info d-flex align-items-center"><span class="d-flex align-items-center">{{{totaltimespent}}}</span></div>
		</li>
		<li>
			<div class="label text-muted">{{# str}} averagetimespent, block_reportdashboard{{/ str}}</div>
			<div class="time_info d-flex align-items-center"><span class="d-flex align-items-center">{{{avgtimespent}}}</span></div>
		</li>
	</ul>
</div>
