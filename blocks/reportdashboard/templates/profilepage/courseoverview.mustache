{{!
    @template block_reportdashboard/profilepage/courseoverview

    Review the information of user enrolled courses.

    Example context (json):
    {
    }
}}
<h5 class="mb-3 pl-2">{{#str}} courseoverview, block_reportdashboard {{/str}}</h5>
<div class="courseoverview_card card ls-card">
	<div class = "reportdashboard_header">
		<div id="reportcontainer{{coursesoverviewinstance}}" class="report_dashboard_container" data-reportid="{{coursesoverviewreportid}}"
		data-reporttype="{{coursesoverviewtype}}" data-blockinstance="{{coursesoverviewreportid}}" >
		</div>
	</div>
</div>
{{#js}}
    require(['block_learnerscript/report'], function(s) {
		var params = {};
        params.reportid = {{coursesoverviewreportid}};
		params.reporttype = '{{coursesoverviewtype}}';
		params.instanceid = {{coursesoverviewreportid}};
		params.reportdashboard = false;
        params.filters = {filter_users:{{userid}}};
        s.CourseprofileReportsdata(params);
    });
{{/js}}
