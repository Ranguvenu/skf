{{!
    @template block_reportdashboard/switchrole

    Describe the accesseble roles to current user.

    Example context (json):
    {
    }
}}
{{#switchrole}}
    <span class="dropdown">
        <a class="dropdown-toggle htitle" id="switchrole{{reportinstance}}" data-toggle="dropdown" data-tooltip="true"
            aria-haspopup="true" aria-expanded="false">
            <span class="tooltiptext tooltip-top">{{#str}}switchrole, block_reportdashboard{{/str}}</span>
            {{#pix}}switchrole, block_learnerscript, {{#str}}switchrole, block_reportdashboard{{/str}}{{/pix}}
        </a>
        <ul class="menu dropdown-menu dropdown-menu-right dropdown-content" area-labelledby="switchrole{{reportinstance}}">
            {{# issiteadmin }}
                <li role="presentation">
                    <a href='{{config.wwwroot}}/blocks/reportdashboard/dashboard.php' class="dropdown-item menu-action">{{#str}}defaultrole, block_reportdashboard{{/str}}</a>
                </li>
            {{/ issiteadmin }}
            {{^ issiteadmin }}
                <li role="presentation">
                    <a href='{{config.wwwroot}}/blocks/reportdashboard/dashboard.php?role={{role}}&contextlevel={{contextlevel}}' class="dropdown-item menu-action">{{#str}}defaultrole, block_reportdashboard{{/str}}</a>
                </li>
            {{/ issiteadmin }}

        {{#roles}}
            <li role="presentation" class='{{active}}'>
                <a href='{{config.wwwroot}}/blocks/reportdashboard/dashboard.php?role={{roleshortname}}&contextlevel={{contextlevel}}&dashboardurl={{dashboardurl}}'
                    class="dropdown-item menu-action">{{rolename}}</a>
            </li>
        {{/roles}}
        </ul>
    </span>
{{/switchrole}}
